generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Tabela de Tipo de Usuário
// ==========================
model Role {
  id   Int    @id @default(autoincrement())
  name String

  user User[]

  @@map("roles")
}

// Tabela de Usuário
// ==================
model User {
  id           String    @id @default(uuid())
  name         String
  email        String
  password     String
  photo        String?
  phone_number String?
  crm          Int?
  role_id      Int
  created_at   DateTime? @default(now())
  updated_at   DateTime? @default(now())

  role    Role      @relation(fields: [role_id], references: [id])
  patient Patient[]

  @@map("users")
}

// Tabela de Pacientes
// ====================
model Patient {
  id           String    @id @default(uuid())
  name         String
  photo        String?
  birth        String
  title        String?
  initial_date String?
  final_date   String?
  description  String?   @db.Text
  recipe       String?   @db.Text
  created_at   DateTime? @default(now())
  updated_at   DateTime? @default(now())
  user_id      String

  user  User?   @relation(fields: [user_id], references: [id])
  event Event[]
  daily Daily[]

  @@index([user_id])
  @@map("patients")
}

// Tabela de Rotina Diária
// ========================
model Daily {
  id          String   @id @default(uuid())
  title       String
  hour        DateTime
  description String   @db.Text
  done        Boolean
  patient_id  String
  patient     Patient @relation(fields: [patient_id], references: [id])

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("dailys")
}

// Tabela de Eventos
// ==================
model Event {
  id          String  @id @default(uuid())
  description String  @db.Text
  date        String
  hour        String
  color       String
  patient_id  String
  patient     Patient @relation(fields: [patient_id], references: [id])

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("events")
}
